# 应用配置
APP_NAME=ClarkGo
APP_VERSION=1.0.0
APP_URL=http://localhost:8888
APP_TIMEZONE=UTC
APP_ENV=development
APP_DEBUG=true
APP_KEY=

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8888


# 数据库类型: mysql, sqlite 或 postgres
DB_TYPE=sqlite

# MySQL 配置 (当DB_TYPE=mysql时生效)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=clarkgo
MYSQL_USERNAME=root
MYSQL_PASSWORD=

# PostgreSQL 配置 (当DB_TYPE=postgres时生效)
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DATABASE=clarkgo
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=
POSTGRES_SSLMODE=disable

# SQLite 配置 (当DB_TYPE=sqlite时生效)
SQLITE_DATABASE=database/data.db
SQLITE_USERNAME=
SQLITE_PASSWORD=

# Redis配置
REDIS_ENABLED=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=
REDIS_TIMEOUT=5

# 日志配置
LOG_CHANNEL=stack
LOG_LEVEL=debug

# 邮件配置
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# AI 配置
AI_DEFAULT_PROVIDER=openai

# OpenAI 配置
OPENAI_API_KEY=sk-test-api-key-for-development
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# 通用配置
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1

# 功能开关
AI_CHAT_ENABLED=true
AI_COMPLETION_ENABLED=true
AI_EMBEDDING_ENABLED=true
AI_STREAMING_ENABLED=true

# 安全设置
AI_CONTENT_FILTER_ENABLED=true
AI_AUDIT_LOG_ENABLED=true